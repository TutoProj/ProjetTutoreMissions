<%= simple_form_for(@mission) do |f| %>
  <%= f.error_notification %>

  <div class="form-inputs">
    <%= f.input :compteUser ,:label=>"Nom de l'utilisateur"%>
    <%= f.input :NumConvention ,:label=>"Numéro de la convention"%>
    <%= f.input :destination ,:label=>"Destination"%>
    <%= f.input :imputation ,:label=>"Imputation"%>
    <%= f.input :numMarche ,:label=>"Numero de marché"%>
    <%= f.input :frais ,:label=>"Frais"%>
    <%= f.input :permanant ,:label=>"Permanant?"%>
    <%= f.input :dateDepart ,:label=>"Date de départ"%>
    <%= f.input :dateRetour ,:label=>"Date de retour"%>
    <%= f.input :motifDeplacement ,:label=>"Motif du déplacement"%>
    <%= f.input :status ,:label=>"Status"%>
    <%= f.input :dateClotureMission ,:label=>"Date de cloture de la mission"%>
  </div>

  <div class="form-actions">
    <%= f.button :submit %>
  </div>
<% end %>
