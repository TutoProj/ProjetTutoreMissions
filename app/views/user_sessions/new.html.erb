<h1>Login</h1>


<%= simple_form_for @user_session, :url => {:action => "create"} do |f| %>
	<%= f.full_error :token %>
	<div>
		<%= f.label :login %>
		<%= f.text_field :login %>
	</div>
	<div>
		<%= f.label :password %>
		<%= f.password_field :password %>
	</div>
	<div>
		<%= f.check_box :remember_me %>
		<%= f.label :remember_me %>
	</div>
	<div>
		<%= f.submit "Login" %>
	</div>
<% end %>	
