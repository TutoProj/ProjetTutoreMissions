<h1>Liste des frais de déplacement</h1>

<table>
  <tr>
    <th>Demande d'avance</th>
    <th>Régularisation d'avance</th>
    <th>Forfait</th>
    <th>Montant</th>
    <th></th>
    <th></th>
    <th></th>
  </tr>

<% @frais_deplacements.each do |frais_deplacement| %>
  <tr>
    <td><%= frais_deplacement.demandeAvance %></td>
    <td><%= frais_deplacement.regularisationDAvance %></td>
    <td><%= frais_deplacement.forfait %></td>
    <td><%= frais_deplacement.montant %></td>
    <td><%= link_to 'Afficher', frais_deplacement %></td>
    <td><%= link_to 'Modifier', edit_frais_deplacement_path(frais_deplacement) %></td>
    <% if current_user.admin? %>
    <td><%= link_to 'Supprimer', frais_deplacement, :method => :delete, :data => { :confirm => 'Etes-vous sur?' } %></td>
  </tr>
  <% end %>
<% end %>
</table>

<br />
<% if current_user.admin? %>
<%= link_to 'Nouveau frais de déplacement', new_frais_deplacement_path %>
<% end %>
